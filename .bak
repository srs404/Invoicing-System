<table class="table text-center" id="item-table">
    <thead class="table-dark">
        <tr>
            <th>Item Name</th>
            <th>Item Description</th>
            <th><label for="price-checkbox">Price</label> <input class="form-check-input" type="checkbox" value=""
                    id="price-checkbox">
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td style="width: 250px;">
                <select class="form-select" id="formType" required>
                    <option selected disabled value="">Choose...</option>
                    <option value="hotel-resort">Hotel/Resort</option>
                    <option value="Ship">Ship</option>
                    <option value="Flight">Flight</option>
                    <option value="Package">Package</option>
                    <option value="Bus">Bus</option>
                </select>
            </td>
            <td>
                <textarea class="form-control" style="height: 2px;" id="item-description" placeholder="Item Description"
                    required></textarea>
            </td>
            <td style="width: 190px;">
                <div class="input-group mb-3" id="item-price-container">
                    <span class="input-group-text">BDT</span>
                    <input type="number" class="form-control" style="text-align: right;" id="item-price"
                        oninput="subtotalCalculator()" value="9600" disabled aria-label="Item Quantity">
                    <span class="input-group-text">à§³</span>
                </div>
            </td>
            <td>
                <button class="btn btn-danger btn-sm" onclick="deleteRow(this); subtotalCalculator()"><span
                        class="fa fa-trash"></span></button>
                <button class="btn btn-success btn-sm" onclick="subtotalCalculator('new'); insRow()"><span
                        class="fa fa-plus"></span></button>
            </td>
        </tr>
    </tbody>
</table>